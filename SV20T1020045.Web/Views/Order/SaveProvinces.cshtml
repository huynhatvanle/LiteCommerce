@model SV20T1020045.DomainModels.Order
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="box-body">
        <form id="formProvinces" action="~/Order/SaveProvinces/@ViewBag.OrderID" method="post" enctype="multipart/form-data">

            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa thông tin địa chỉ đơn hàng</h4>
            </div>

            
                <div class="form-group">
                <label class="control-label col-sm-4">Tỉnh/Thành</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="deliveryProvince">
                            <option value="">-- Chọn tỉnh/thành --</option>
                            @foreach (var item in SV20T1020045.BusinessLayers.CommonDataService.ListOfProvinces())
                            {
                                <option value="@item.ProvinceName">@item.ProvinceName</option>
                            }
                        </select>
                    </div>
                </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Địa chỉ nhận hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="deliveryAddress" />
                </div>
            </div>
            <div class="form-group">
                <span id="message" style="color:#f00"></span>
            </div>
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
    </div>
</div>
<script>$(document).ready(function () {
    $('#formProvinces').submit(function (e) {
            e.preventDefault();

            var url = $(this).prop("action");
            var method = $(this).prop("method");
            var postData = $(this).serializeArray();

            $.ajax({
                url: url,
                type: method,
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    if (data !== "") {
                        $("#message").html(data);
                    }
                    else {
                        location.reload();
                    }
                }
            });
            return;

        });
    });
    </script>