@{
}
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Đổi mật khẩu</h3>
        <div class="box-tools pull-right">
        </div>
    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" autofocus name="oldPassword">
                    @Html.ValidationMessage("oldPassword", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group" style="margin-top:10px">
                <label class="control-label col-sm-2">Nhập mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" rows="3" name="newPassword" />
                    @Html.ValidationMessage("newPassword", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Xác nhập mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" rows="3" name="confirmPassword" />
                    @Html.ValidationMessage("confirmPassword", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="flex justify-content-center ">
                @Html.ValidationMessage("kt1", new { @style = "color:#f00" })
                @Html.ValidationMessage("kt2", new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Home">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>

</div>
